<% @merchants.each do |merchant| %>
	<section id='merchant-<%= merchant.id %>'>
		<h3><%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %></h3>
		<p><%= merchant.city %>, <%= merchant.state %></p>
		<% if merchant.enabled? %>
      <p>Account Status: enabled |
        <%= button_to "disable", "/admin/merchants/#{merchant.id}", method: :patch %></p>
		<% else %>
      <p>Account Status: disabled |
        <%= button_to "enable", "/admin/merchants/#{merchant.id}", method: :patch %></p>
		<% end %>
	</section>
<% end %>
